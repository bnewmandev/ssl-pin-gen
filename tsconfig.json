{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./lib"
  ]
}
